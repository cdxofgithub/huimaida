/* pages/detail/detail.wxss */
.page {
  padding-bottom: 110rpx;
  position: relative;
}
.hongbao {
  position: absolute;
  top: 0;
  left: 0;
  background: #fef9e6;
}
.hongbao .hongbao_img {
  width: 110rpx;
  display: flex;
  align-items: flex-end;
  margin-right: 20rpx;
}
.hongbao_img image {
  width: 100%;
}
.hongbao .desc {
  flex: 1;
  padding: 20rpx 30rpx 20rpx 0;
  font-size: 26rpx;
}
.house_img {
  height: 500rpx;
}
.house_img image {
  width: 100%;
  height: 100%;
}
.house_name {
  width: 100%;
  padding: 30rpx;
  font-size: 34rpx;
  background: #fff;
  box-sizing: border-box;
}
.sales {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}
.sale {
  margin-bottom: 26rpx;
}
.sale image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.supports {
  flex-wrap: wrap;
}
.support {
  font-size: 26rpx;
  color: #8a8a8a;
  margin-right: 26rpx;
  margin-bottom: 10rpx;
}
.support image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.contact {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #5c5c5c;
  padding: 0 40rpx;
  background: #fff;
}
.contact .name {
  font-weight: 600;
}
.contact text {
  width: 580rpx;
}
.contact image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
}
.contact .right image {
  width: 30rpx;
  height: 30rpx;
}
.info {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}
.info .title {
  margin-bottom: 40rpx;
}
.info .title .heng_xian {
  width: 50rpx;
  height: 6rpx;
  background: #3b3b3b;
}
.info .title .tit {
  margin: 0 20rpx;
}
.product_content {
  color: #5c5c5c;
  font-size: 28rpx;
}
.product_content .content_item {
  text-indent: 56rpx;
  line-height: 1.5;
}
.footer .left {
  width: 60%;
}
.footer .left .nowPrice {
  font-size: 34rpx;
  margin-right: 14rpx;
}
.footer .left .oldPrice {
  font-size: 26rpx;
  color: #8a8a8a;
  text-decoration: line-through;
}
.footer .right {
  width: 40%;
  height: 90rpx;
  line-height: 90rpx;
  background: #ff8100;
  color: #fff;
}

/* 生成海报 */
.imagePathBox{
  width: 100%;
  height: 100%;
  background: #b2b2b2;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}
.shengcheng{
  width: 80%;
  height: 80%;
  position: fixed;
  top: 50rpx;
  left: 50%;
  margin-left: -40%;
  z-index: 10;
}
.baocun{
  display: block;
  width: 80%;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 50rpx;
  left: 10%;
  background: #ffe200;
  color: #333;
  font-size: 32rpx;
  border-radius: 44rpx;
}
button[class="baocun"]::after{
  border: 0;
}