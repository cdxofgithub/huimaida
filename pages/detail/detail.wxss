/* pages/detail/detail.wxss */
.page {
  padding-bottom: 110rpx;
  position: relative;
}
.hongbao {
  position: absolute;
  top: 0;
  left: 0;
  background: #fef9e6;
}
.hongbao .hongbao_img {
  width: 110rpx;
  display: flex;
  align-items: flex-end;
  margin-right: 20rpx;
}
.hongbao_img image {
  width: 100%;
}
.hongbao .desc {
  flex: 1;
  padding: 20rpx 30rpx 20rpx 0;
  font-size: 26rpx;
}
.house_img {
  height: 500rpx;
}
.house_img image {
  width: 100%;
  height: 100%;
}
.house_name {
  width: 100%;
  padding: 30rpx;
  font-size: 34rpx;
  background: #fff;
  box-sizing: border-box;
}
.sales {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}
.sale {
  margin-bottom: 26rpx;
}
.sale image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.supports {
  flex-wrap: wrap;
}
.support {
  font-size: 26rpx;
  color: #8a8a8a;
  margin-right: 26rpx;
  margin-bottom: 10rpx;
}
.support image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}
.contact {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #5c5c5c;
  padding: 0 40rpx;
  background: #fff;
}
.contact .name {
  font-weight: 600;
}
.contact text {
  width: 580rpx;
}
.contact image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 14rpx;
}
.contact .right image {
  width: 30rpx;
  height: 30rpx;
}
.info {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}
.info .title {
  margin-bottom: 40rpx;
}
.info .title .heng_xian {
  width: 50rpx;
  height: 6rpx;
  background: #3b3b3b;
}
.info .title .tit {
  margin: 0 20rpx;
}
.product_content {
  color: #5c5c5c;
  font-size: 28rpx;
}
.product_content .content_item {
  text-indent: 56rpx;
  line-height: 1.5;
}
.footer .left {
  width: 60%;
}
.footer .left .nowPrice {
  font-size: 34rpx;
  margin-right: 14rpx;
}
.footer .left .oldPrice {
  font-size: 26rpx;
  color: #8a8a8a;
  text-decoration: line-through;
}
.footer .right {
  width: 40%;
  height: 90rpx;
  line-height: 90rpx;
  background: #ff8100;
  color: #fff;
}

/* 生成海报 */
canvas{
  position: fixed;
  top: 0;
  left: 400px;
}
.share{
  position: absolute;
  bottom: 100rpx;
  width: 70%;
  left: 15%;
  height: 100rpx;
  line-height: 100rpx;
}
.preview {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.9);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
}
.preview image{
  width: 70%;
  position: absolute;
  top: 10%;
  left: 15%;
  z-index: 3;
  border: 1px dashed #fff;
}
.preview button{
  width: 40%;
  position: absolute;
  bottom: 200rpx;
  left: 30%;
}
.share_info {
  width: 100%;
  height: 160rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 11;
  font-size: 28rpx;
}
.share_info .share_item {
  margin-bottom: 14rpx;
}
.share_info .keyColor {
  font-size: 32rpx;
}
.otherRecommend .name {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.recommend_item .img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
} 
.recommend_item .img image {
  width: 100%;
  height: 100%;
}
.recommend_item .message {
  flex: 1;
}
.recommend_item .message_desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.message_price {
  align-items: flex-end;
  margin-top: 4px;
}
.message_price .nowPrice {
  margin-right: 10rpx;
}
.message_price .oldPrice {
  text-decoration: line-through;
  color: #8a8a8a;
  font-size: 26rpx;
}
@import "../../wxParse/wxParse.wxss";