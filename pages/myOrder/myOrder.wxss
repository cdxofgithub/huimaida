/* pages/myOrder/myOrder.wxss */
.orders {
}
.order_item {
  margin-bottom: 20rpx;
  padding: 0 30rpx 30rpx 30rpx;
  background: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
}
.order_item .order_top {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #d9d9d9;
}
.order_top .time {
  font-weight: 600;
}
.order_title {
  margin-top: 20rpx;
}
.order_name {
  margin-top: 20rpx;
  font-weight: 600;
}
.order_desc {
  margin-top: 20rpx;
  width: 100%;
  height: 200rpx;
  border: 4rpx solid #d9d9d9;
  border-radius: 4rpx;
  text-align: center;
}
.order_desc .left {
  width: 60%;
  border-right: 4rpx dashed #d9d9d9;
  font-size: 26rpx;
}
.order_desc .left text {
  font-size: 36rpx;
  color: #333;
  margin-left: 4rpx;
  letter-spacing: 2rpx;
}
.order_desc .cardNumber, .order_desc .state {
  width: 100%;
  height: 140rpx;
  line-height: 140rpx;
}
.order_desc .validity, .order_desc .cancel {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.order_desc .validity {
  background: #f2f2f2;
  font-size: 22rpx;
}
.order_desc .state {
  font-size: 32rpx;
}
.order_desc .cancel {
  font-size: 26rpx;
}
.order_desc .right {
  flex: 1;
}