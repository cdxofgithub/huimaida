/* pages/myOrder/myOrder.wxss */

.order_item {
  margin-bottom: 20rpx;
  padding: 0 30rpx 30rpx 30rpx;
  background: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
}
.order_item .order_top {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #d9d9d9;
}
.order_top .time {
  font-weight: 600;
}
.order_title {
  margin-top: 20rpx;
}
.order_name {
  margin-top: 20rpx;
  font-weight: 600;
}
.order_desc {
  margin-top: 20rpx;
  width: 100%;
  height: 200rpx;
  border: 4rpx solid #d9d9d9;
  border-radius: 4rpx;
  text-align: center;
}
.order_desc .left {
  width: 60%;
  border-right: 4rpx dashed #d9d9d9;
  font-size: 26rpx;
}
.order_desc .left text {
  font-size: 36rpx;
  color: #333;
  margin-left: 4rpx;
  letter-spacing: 2rpx;
}
.order_desc .cardNumber, .order_desc .state {
  width: 100%;
  height: 140rpx;
  line-height: 140rpx;
}
.order_desc .validity, .order_desc .cancel {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
.order_desc .validity {
  background: #f2f2f2;
  font-size: 22rpx;
}
.order_desc .state {
  font-size: 32rpx;
  color: #cdcdcd;
}
.order_desc .state.normal {
  color: #8a8a8a;
}
.order_desc .cancel {
  font-size: 26rpx;
}
.order_desc .right {
  flex: 1;
}

/* tab切换 */
.swiper-tab {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.06);
  text-align: center;
  line-height: 100rpx;
  background: #ffffff;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #666;
  text-align: centerl
}
.swiper-tab-list .name {
  width: 120rpx;
  height: 90rpx;
  text-align: center;
  margin: 0 auto;
}
.on {
  color: #ff8100;
  border-bottom: 5rpx solid #ff8100;
}

.swiper-box {
  margin-top: 98rpx;
}
.footer {
  font-size: 34rpx;
  background: #ff8100;
  color: #fff;
}