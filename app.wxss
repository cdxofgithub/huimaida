.flex_b_c {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* flex 两端对齐 */
.flex_b_0 {
  display: flex;
  justify-content: space-between;
}
/* flex 右对齐 */
.flex_0_r {
  display: flex;
  justify-content: flex-end;
}
/* flex 上下居中 */
.flex_0_c {
  display: flex;
  align-items: center;
}
/* flex 左对齐 上下居中 */
